// ============================================
// 데이터베이스 설정
// ============================================
// 카페24 호스팅 관리자 > 데이터베이스 관리에서 확인
if (!defined('DB_HOST')) {
    define('DB_HOST', 'localhost'); // 카페24 DB 호스트 (보통 localhost)
    define('DB_NAME', 'your_database_name'); // 데이터베이스 이름
    define('DB_USER', 'your_database_user'); // 데이터베이스 사용자명
    define('DB_PASS', 'your_database_password'); // 데이터베이스 비밀번호
    define('DB_CHARSET', 'utf8mb4');
}

// ============================================
// 앱 설정
// ============================================
if (!defined('APP_DEBUG')) {
    // 프로덕션 환경에서는 false로 설정
    define('APP_DEBUG', false);
}

// ============================================
// Base URL 설정
// ============================================
// 자동 감지되지만, 서브도메인이나 특정 경로를 사용하는 경우 여기서 설정
// 예: https://your-domain.com 또는 https://your-domain.com/dolbom_php
if (!defined('BASE_URL')) {
    $protocol = (!empty($_SERVER['HTTPS']) && $_SERVER['HTTPS'] !== 'off') ? 'https' : 'http';
    $host = $_SERVER['HTTP_HOST'] ?? '';
    // 필요시 여기에 경로 추가: $host . '/dolbom_php'
    define('BASE_URL', $protocol . '://' . $host);
}

// ============================================
// API 설정
// ============================================
if (!defined('API_JWT_SECRET')) {
    // 프로덕션에서는 반드시 강력한 랜덤 키 사용 (최소 32자)
    define('API_JWT_SECRET', 'CHANGE-THIS-TO-STRONG-RANDOM-SECRET-KEY-MIN-32-CHARACTERS');
}

if (!defined('API_CORS_ORIGINS')) {
    // 허용할 도메인 (쉼표로 구분)
    // 예: 'https://your-domain.com,https://www.your-domain.com'
    define('API_CORS_ORIGINS', BASE_URL);
}

// ============================================
// Vue.js 앱 URL (매니저 앱)
// ============================================
// 프로덕션: https://your-domain.com/manager-app
// 로컬: http://localhost:3000
if (!defined('VITE_APP_URL')) {
    define('VITE_APP_URL', getenv('VITE_APP_URL') ?: BASE_URL . '/manager-app');
}

